<Page 
    actionBarHidden="true"
    navigatingTo="onNavigatingTo" 
    loaded="onLoaded"
    class="page" 
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <FlexboxLayout class="page">

        <StackLayout class="form">

            <Image class="logo" src="~/assets/images/logo.jpg" />
            <Label class="header" text="True ID" />
            <Label class="lead" text="You control your identity" />

        </StackLayout>

        <FlexboxLayout 
            id="bottomPanel" 
            flexGrow="1" 
            backgroundColor="#3C57FF" 
            width="100%">

            <Button id="createAccountBtn" class="btn btn-primary m-t-20" text="Create Account" tap="onCreateAccount"/>
            <Button id="retrieveAccountBtn" class="btn btn-primary m-t-20" text="Retrieve Account" tap="onRetrieveAccount"/>

        </FlexboxLayout>

    </FlexboxLayout>
</Page>